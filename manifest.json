{
  "manifest_version": 2,
  "name": "Verybuy - 計算勸敗點",
  "description": "計算勸敗點",
  "version": "2.0",
  "page_action": {
    "default_title": "Verybuy - 計算勸敗點",
    "default_icon": "./icon_128x128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./icon_128x128.png",
    "48": "./icon_128x128.png",
    "128": "./icon_128x128.png"
  },
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.verybuy.cc/member/vcoin"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs", "declarativeContent", "https://www.verybuy.cc/member/vcoin"]
}